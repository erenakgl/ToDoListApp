<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Uygulamam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            padding-top: 70px;
            font-family: 'Poppins', sans-serif;
            background: #f0f0f0; /* Background color for the main content */
            color: #333; /* Text color */
        }

        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        .navbar-inverse {
            background-color: #2c3e50; /* Navbar background color */
            border-color: #2c3e50;
        }

            .navbar-inverse .navbar-brand {
                color: #ecf0f1; /* Navbar text color */
                font-family: 'Poppins', sans-serif; /* Apply a custom font */
            }

            .navbar-inverse .navbar-nav > li > a {
                color: #bdc3c7; /* Navbar link color */
            }

                .navbar-inverse .navbar-nav > li > a:hover,
                .navbar-inverse .navbar-nav > li > a:focus {
                    color: #ecf0f1; /* Navbar link color on hover */
                }

            .navbar-inverse .navbar-toggle {
                border-color: #ecf0f1; /* Navbar toggle button color */
            }

                .navbar-inverse .navbar-toggle:hover,
                .navbar-inverse .navbar-toggle:focus {
                    background-color: #2c3e50; /* Navbar toggle button background color on hover */
                }

                .navbar-inverse .navbar-toggle .icon-bar {
                    background-color: #ecf0f1; /* Navbar toggle button icon color */
                }

        .container.body-content {
            padding-top: 15px;
        }

        footer {
            text-align: center;
            padding: 20px 0;
            background-color: #2c3e50; /* Footer background color */
            color: #ecf0f1; /* Footer text color */
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background: #2c3e50; /* Sidebar background color */
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            color: #ecf0f1; /* Sidebar text color */
            font-family: 'Poppins', sans-serif; /* Apply a custom font */
        }

            .sidebar a {
                padding: 15px 15px;
                text-decoration: none;
                font-size: 18px;
                color: #bdc3c7; /* Sidebar link color */
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    color: #ecf0f1; /* Sidebar link color on hover */
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #2c3e50; /* Button background color */
            color: #ecf0f1; /* Button text color */
            padding: 10px 15px;
            border: none;
        }

            .openbtn:hover {
                background-color: #34495e; /* Button background color on hover */
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="toggleNav()">×</a>
        @Html.ActionLink("Home Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        @Html.ActionLink("ToDo Application", "Index", "ToDoes", new { area = "" }, new { @class = "navbar-brand" })
        @Html.Partial("_LoginPartial")
    </div>

    <!-- Page Content -->
    <div id="main">
        <button class="openbtn" onclick="toggleNav()">☰ Open Sidebar</button>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function toggleNav() {
            var sidebar = document.getElementById("mySidebar");
            var mainContent = document.getElementById("main");

            if (sidebar.style.width === "250px") {
                sidebar.style.width = "0";
                mainContent.style.marginLeft = "0";
            } else {
                sidebar.style.width = "250px";
                mainContent.style.marginLeft = "250px";
            }
        }
    </script>
</body>
</html>
