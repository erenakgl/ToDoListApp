@model ToDoListApp.Models.ToDo

@{
    ViewBag.Title = "Delete";
}

<style>
    body {
        background-color: #343a40;
        color: #fff;
        font-family: 'Quicksand', sans-serif;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .delete-container {
        max-width: 400px;
        background-color: #495057;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        margin-top: 50px;
        width: 100%;
    }

    h2 {
        color: #dc3545;
        text-align: center;
        font-family: 'Pacifico', cursive;
        margin-bottom: 10px;
    }

    h3 {
        color: #dc3545;
        text-align: center;
        font-weight: normal;
    }

    .dl-horizontal dt {
        width: 100px;
    }

    .btn-default {
        display: block;
        width: 100%;
        margin-top: 20px;
        background-color: #dc3545;
        color: #fff;
        border: 1px solid #dc3545;
        border-radius: 5px;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease-in-out, border 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .btn-default:hover {
            background-color: #c82333;
            border: 1px solid #c82333;
            color: #fff;
        }
</style>

<div class="container animate__animated animate__fadeIn">
    <div class="delete-container">
        <h2>Delete</h2>
        <h3>Are you sure you want to delete this?</h3>

        <div>
            <h4>ToDo</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Describtion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Describtion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Describtion2)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Describtion2)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsDone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsDone)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Pacifico&family=Quicksand:wght@300;400;500;600;700&display=swap">
